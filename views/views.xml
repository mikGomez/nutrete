<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="nutrete.nutrete_list">
      <field name="name">nutrete list</field>
      <field name="model">nutrete.nutrete</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="nutrete.action_nutrete_window">
      <field name="name">nutrete window</field>
      <field name="res_model">nutrete.nutrete</field>
      <field name="view_mode">tree,form</field>
    </record>


