    <menuitem name="Dieta" id="nutrete.menu_1" parent="nutrete.menu_root" />
    <menuitem name="Nutricionista" id="nutrete.menu_2" parent="nutrete.menu_root" />

    <!-- actions -->

    <menuitem name="nutrete" id="nutrete.menu11" parent="nutrete.menu_1"
